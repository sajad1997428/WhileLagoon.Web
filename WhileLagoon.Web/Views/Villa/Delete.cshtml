@model Villa
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-gradient bg-success ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Villa</h1>
            </div>

        </div>

    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden/>
            <div class="col-10">
                <div class="p-3">
                    <div asp-validation-summary="None"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" disabled class="border form-control shadow" />
                        <label asp-for="Name" class="ms-2"></label>

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" disabled class="border form-control shadow" />
                        <label asp-for="Description" class="ms-2"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="price" disabled class="form-control border shadow" />
                        <label asp-for="price" class="ms-2"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="sqft" disabled class="form-control border shadow" />
                        <label asp-for="sqft" class="ms-2"></label>

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Occupancy" disabled class="form-control shadow border" />
                        <label asp-for="Occupancy" class="ms-2"></label>

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ImageUel" disabled class="form-control border shadow" />
                        <label asp-for="ImageUel" class="ms-2"></label>

                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                </svg>  Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-action="Index" asp-controller="Villa" class="btn btn-danger w-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                </svg>  back  List
                            </a>
                        </div>



                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUel" width="100%" style="border-radius:5px;border:1px solid #bbb9b9" />

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}